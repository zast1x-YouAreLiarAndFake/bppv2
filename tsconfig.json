{
	"compilerOptions": {
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
			}
		],
		"target": "ES2018",
		"useDefineForClassFields": true,
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"jsx": "react",
		"jsxFactory": "window.BPP.vendorManager.vendors.normalized.React.createElement",
		"jsxFragmentFactory": "window.BPP.vendorManager.vendors.normalized.React.Fragment",
		"baseUrl": "./src/",
		"paths": {
			"#*": [
				"./*"
			]
		}
	},
	"include": [
		"src/**/*",
		"src/types/types.d.ts"
	],
	"exclude": [
		"node_modules"
	],
}